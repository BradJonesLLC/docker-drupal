{
    "name": "bradjonesllc/docker-drupal",
    "description": "Project template for Drupal 8 with Composer and Docker",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.2",
        "drupal/console": "~1.0",
        "drupal/core": "^8.5.3",
        "drush/drush": "^9.0",
        "hirak/prestissimo": "^0.3",
        "webmozart/path-util": "^2.3",
        "drupal/console-yaml": "^0.1.3"
    },
    "require-dev": {
        "webflo/drupal-core-require-dev": "^8.5.3"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "platform": {
            "ext-curl": "1",
            "ext-mbstring": "1",
            "ext-dom": "1",
            "ext-xmlwriter": "1",
            "ext-simplexml": "1",
            "ext-soap": "1",
            "ext-gmp": "1",
            "ext-gd": "1",
            "ext-xml": "1",
            "php": "7.1.6"
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "config-export": "docker-compose exec -T --user $(id -u) web bash -c 'drush -y config-export'",
        "drupal-updates": "docker-compose exec -T web bash -c 'drush -y updb && drush -y config-import && drush -y entity:updates'",
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-create-project-cmd": "sh scripts/composer/install.sh"
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        }
    }
}
